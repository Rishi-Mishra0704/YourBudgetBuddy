<div class="d-flex align-items-center justify-content-between m-4">
  <%= link_to "Back", group_index_path, class: "btn btn-secondary", type: "button" %>
  <button class="btn add" data-bs-toggle="modal" data-bs-target="#add">
    Add Expense
  </button>
  <%= render "shared/modal",
  data: @expenses,
  title: "Select Expenses To Add",
  url: group_path(@group),
  method: :put,
  group: @group %>
</div>
<%= render "shared/group_card", group: @group %>
<table class="table mx-auto table-striped bg-light table-hover">
  <thead>
    <tr>
      <th scope="col">S.No</th>
      <th scope="col">Expense</th>
      <th scope="col">Amount</th>
      <th scope="col">Spend on</th>
    </tr>
  </thead>
  <tbody>

    <% @group_expenses.each_with_index do |expense, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= expense.name %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.created_at.strftime("%e %B %Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>