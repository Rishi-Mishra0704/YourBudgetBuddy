<%= form_with(model: expense, url: url, method: method) do |f| %>
  <div class="from-group mb-3">
    <%= f.label :name, "Spend On", class: "form-label" %>
    <%= f.text_field :name, class: "form-control form-control-sm" %>
    <%= render "shared/form_error", errors: f.object.errors, field: :name %>
  </div>
  <div class="from-group mb-3">
    <%= f.label :amount, "Amount You Pay", class: "form-label" %>
    <%= f.number_field :amount, class: "form-control form-control-sm" %>
    <%= render "shared/form_error", errors: f.object.errors, field: :amount %>
  </div>

  <div class="actions">
    <%= f.submit label, class: "btn log" %>
  </div>
<% end %>